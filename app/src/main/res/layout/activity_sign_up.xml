<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.SignUp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_line1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_line2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_line1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_line2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHAT"
        android:textSize="70dp"
        android:fontFamily="@font/nanumb"
        android:textStyle="bold"
        android:textColor="@color/chat_blue"
        app:layout_constraintTop_toTopOf="@id/horizontal_line1"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line1"
        app:layout_constraintRight_toRightOf="@id/vertical_line2"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line2"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line1"
        app:layout_constraintRight_toRightOf="@id/vertical_line2"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/edt_background"
        android:hint="Name"
        android:fontFamily="@font/nanumb"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line1"
        app:layout_constraintRight_toRightOf="@id/vertical_line2"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/edt_background"
        android:hint="Email"
        android:fontFamily="@font/nanumb"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line1"
        app:layout_constraintRight_toRightOf="@id/vertical_line2"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/edt_background"
        android:hint="Password"
        android:fontFamily="@font/nanumb"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_Signup"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/vertical_line1"
        app:layout_constraintRight_toRightOf="@id/vertical_line2"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        android:background="@drawable/btn_background"
        android:text="회원가입"
        android:textSize="16sp"
        android:fontFamily="@font/nanumb"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>